<!-- ABOUT FEATURE -->
<div class="section feature section-border">
    <div class="container">
        <div class="row">

            <div class="col-sm-4 col-md-4">
                <!-- BOX 1 -->
                <div class="box-icon-2">
                    <div class="icon">
